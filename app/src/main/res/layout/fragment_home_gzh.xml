<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.cl.androidstudy.ui.home.gzh.CategoryRecyclerview
        android:id="@+id/rv_gzh_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/bgColorPrimary"
        android:elevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout_gzh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_gzh_category">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_gzh_article"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <TextView
        android:id="@+id/tv_gzh_update_in"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@color/bgColorSecondary"
        android:gravity="center"
        android:text="@string/update_project_text"
        android:textColor="@color/appColorPrimary"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_gzh_category" />

    <TextView
        android:id="@+id/tv_gzh_update_out"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="@string/update_project_text"
        android:textColor="@color/appColorPrimary"
        android:background="@color/bgColorSecondary"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_gzh_category"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_gzh_update_on"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="@string/update_project_text"
        android:textColor="@color/appColorPrimary"
        android:background="@color/bgColorSecondary"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_gzh_category"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>