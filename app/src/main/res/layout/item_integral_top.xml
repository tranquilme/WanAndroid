<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <TextView
        android:id="@+id/tv_integraltop_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="735"
        android:textColor="@color/textColorPrimary"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/tv_integraltop_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="等级:8"
        app:layout_constraintEnd_toStartOf="@+id/tv_integraltop_all"
        app:layout_constraintStart_toStartOf="@+id/tv_integraltop_all"
        app:layout_constraintTop_toBottomOf="@+id/tv_integraltop_all" />

    <TextView
        android:id="@+id/tv_integraltop_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="排名:1644"
        app:layout_constraintStart_toEndOf="@+id/tv_integraltop_level"
        app:layout_constraintTop_toTopOf="@+id/tv_integraltop_level" />
</androidx.constraintlayout.widget.ConstraintLayout>